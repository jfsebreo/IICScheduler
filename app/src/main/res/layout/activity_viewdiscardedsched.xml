<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pending_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ruthere.application.activities.ViewSched"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_section_view"
        android:fontFamily="casual"
        android:text="Section"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView_username_view"
        android:layout_toEndOf="@+id/profileView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView_reason_view"
        android:textSize="18dp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Reason for scheduling: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textSize="18dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/profileView" />

    <ImageView
        android:id="@+id/profileView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/def_prof" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_name_view"
        android:fontFamily="casual"
        android:text="Section"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/profileView" />

    <TextView
        android:text="Reason for discarding:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:textSize="18dp"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/textView_discardreason_view"
        android:textSize="18dp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_schedule_view"
        android:fontFamily="casual"
        android:text="Section"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView_section_view"
        android:layout_toEndOf="@+id/profileView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_username_view"
        android:fontFamily="casual"
        android:text="Section"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView_name_view"
        android:layout_toEndOf="@+id/profileView" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_profile_prof"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditProfileProf"
    android:background="@drawable/bg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_group_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:id="@+id/textView_sched_user" />

    <Button
        android:text="Save Changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/button"
        android:textColor="@color/colorPrimaryText"
        android:id="@+id/button"
        android:onClick="savechanges" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_marginTop="27dp"
        android:id="@+id/editText_firstName_user"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp" />

    <TextView
        android:text="First Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_lastName_user"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="11dp"
        android:id="@+id/textView7" />

    <TextView
        android:text="Last Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_username_user"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="11dp"
        android:id="@+id/textView8" />

    <TextView
        android:text="E-mail:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText_username_user"
        android:layout_alignEnd="@+id/textView8"
        android:layout_marginTop="12dp"
        android:id="@+id/textView9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText_lastName_user"
        android:layout_below="@+id/editText_firstName_user"
        android:layout_alignStart="@+id/editText_firstName_user" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText_username_user"
        android:layout_below="@+id/editText_lastName_user"
        android:layout_alignStart="@+id/editText_lastName_user" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText_group_user"
        android:layout_below="@+id/editText_username_user"
        android:layout_alignStart="@+id/editText_username_user" />

    <TextView
        android:text="Schedule:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_group_user"
        android:layout_alignEnd="@+id/textView9"
        android:layout_marginTop="24dp"
        android:id="@+id/textView_sched" />

    <TextView
        android:text="Department:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignBaseline="@+id/editText_group_user"
        android:layout_alignBottom="@+id/editText_group_user"
        android:layout_alignStart="@+id/textView8" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText_group_user"
        android:backgroundTint="@color/button"
        android:onClick="deleteSched"
        android:text="Edit Schedule"
        android:textColor="@color/colorPrimaryText" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ruthere.application.activities.LoginPage"
    android:background="@drawable/bg"
    >


    <Button
        android:text="REGISTER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_save_register"
        android:backgroundTint="@color/button"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="userRegister"
        android:layout_marginBottom="13dp"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button_login"
        android:layout_alignStart="@+id/button_login" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ust"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/iics"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_password"
        android:hint="Password"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:layout_alignTop="@+id/editText_emailadd"
        android:layout_alignStart="@+id/editText_emailadd"
        android:layout_marginTop="44dp" />

    <Button
        android:text="LOGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_login"
        android:backgroundTint="@color/button"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="userLogin"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:elevation="0dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/button_save_register"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_emailadd"
        android:hint="Username"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:clickable="true"
        android:onClick="forgotpass"
        android:text="@string/forgotpassw"
        android:textAlignment="center" />

    <TextView
        android:text="IICScheduler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textStyle="normal|bold"
        android:textSize="48dp"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:typeface="sans"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />


</RelativeLayout>

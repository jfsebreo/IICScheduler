<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ruthere.application.activities">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="IICScheduler"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentMain"
            android:label="Student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfessorMain"
            android:label="Professor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdminMain"
            android:label="Admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ConsultationSchedule"
            android:windowSoftInputMode="adjustPan"
            />
        <activity android:name=".ViewSched" />
        <activity android:name=".ViewDiscardedSched" />
        <activity android:name=".AcceptRejectSchedPage" />
        <activity android:name=".RegisterUser" />
        <activity android:name=".EditProfileProf" />
        <activity android:name=".Calendar" />
        <activity android:name=".DeleteSched"
            android:label="Delete Schedule"
            ></activity>
        <activity android:name=".ListSched"
            android:label="List of Schedules"
            ></activity>
    </application>

</manifest>